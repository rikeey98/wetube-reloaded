mixin video(video)
    div 
        h4
            //- a(href="/videos/" + video.id)=video.title
            a(href=`/videos/${video.id}`)=video.title
        p=video.description
        ul
            each hashtag in video.hashtags
                li=hashtag
        ul 
            li #{video.meta.rating}/5
            li #{video.comments} comments.
            li #{video.meta.views} views.
        small=video.createdAt
        hr